{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
        "skuSizeVM": {
            "defaultValue": "E2bds_v5",
            "type": "string",
            "metadata": { "description": "Size of Virtual Machines to use" },
            "allowedValues": [ "D2s_v3","D2s_v5","E2ads_v5","E2as_v5","E2bds_v5","E2bs_v5" ]
         },
    "IISVMName": {
      "type": "string",
      "defaultValue": "IISVM1",
      "minLength": 1
    },
    "AvailabilityZone": {
      "type": "string",
      "metadata": {
        "description": "Availability zone to deploy to"
      }
    },
    "AppsSubnetId": {
      "type": "string",
      "metadata": {
        "description": "Subnet Id of the application tier"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "adadmin",
      "metadata": {
        "description": "The name of the administrator account of the new VMs"
      }
    },
    "adminPassword": {
      "type": "securestring"
      "defaultValue": "Demo!pass123",
      "metadata": {
        "description": "The password for the administrator account of the new VMs"
      }
    },
    "domainToJoin": {
      "type": "string",
      "metadata": {
        "description": "Domain FQDN for VMs to join"
      }
    },
    "SQLEndpoint": {
      "type": "string",
      "metadata": {
        "description": "SQL endpoint to use for the application database"
      }
    },
    "publicIP": {
      "type": "bool",
      "metadata": {
        "description": "Use 'true' to create a VM with a public IP address, 'false' to create a VM without a public IP address"
      }
    },
    "IpDomainNameLabel": {
      "type": "string",
      "defaultValue": "[concat('contoso', take(newGuid(), 4))]",
      "metadata": {
        "description": "DNS label to use with public IP address"
      }
    },
    "resourceFolder": {
      "type": "string",
      "defaultValue": "main/Hands-on%20lab/Resources/"
    },
    "baseUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/yungchou/mcwci/"
    }
  },
  "variables": {
    "WebDownloadUrl": "[concat(parameters('baseUri'),parameters('resourceFolder'),'application/ContosoInsuranceIIS.zip')]",
    "WebScriptUrl": "[concat(parameters('baseUri'),parameters('resourceFolder'),'scripts/deploy-IISVM.ps1')]",
    "ScriptFolder": "[concat('./',parameters('resourceFolder'),'scripts/')]",
    "WebScriptFileName": "deploy-IISVM.ps1",
    "WebScriptParameters": "[concat(' -zipurl ', variables('WebDownloadUrl'), ' -datasource ', parameters('SQLEndpoint'), '.', parameters('domainToJoin'), ' -password ', parameters('adminPassword'))]",
    "WebScriptDownload": "[concat('powershell -ExecutionPolicy Unrestricted \"[Net.ServicePointManager]::SecurityProtocol = ''Tls12''; Invoke-WebRequest -uri ', variables('WebScriptUrl') ,' -OutFile ', variables('WebScriptFileName'), ' \"')]",
    "IISVMImagePublisher": "MicrosoftWindowsServer",
    "IISVMImageOffer": "WindowsServer",
    "WebSKU": "2022-Datacenter",
    "IISVMSize": "[concat('Standard_',parameters('skuSizeVM'))]",
    "IISVMNicName": "[concat(parameters('IISVMName'), 'NIC')]",
    "IISVMOSDiskName": "[concat(parameters('IISVMName'), '-OSDisk')]",
    "IISVMIPName": "[concat(parameters('IISVMName'), 'IP')]",
    "DiskType": "Premium_LRS",
    "domainOUPath": "",
    "domainJoinOptions": 3
  },
  "resources": [
    {
      "condition": "[parameters('publicIP')]",
      "name": "[variables('IISVMIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-12-01",
      "sku": {
        "name": "Standard"
      },
      "zones": [
        "[parameters('AvailabilityZone')]"
      ],
      "properties": {
        "publicIPAllocationMethod": "Static",
        "dnsSettings": {
          "domainNameLabel": "[parameters('IpDomainNameLabel')]"
        }
      }
    },
    {
      "name": "[variables('IISVMNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[variables('IISVMIPName')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('AppsSubnetId')]"
              },
              "publicIPAddress": "[if(parameters('publicIP'), json(concat('{\"id\": \"', resourceId('Microsoft.Network/publicIPAddresses', variables('IISVMIPName')), '\"')), json('null'))]"
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('IISVMName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-03-01",
      "dependsOn": [
        "[variables('IISVMNicName')]"
      ],
      "zones": [
        "[parameters('AvailabilityZone')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('IISVMSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('IISVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('IISVMImagePublisher')]",
            "offer": "[variables('IISVMImageOffer')]",
            "sku": "[variables('WebSKU')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[variables('IISVMOSDiskName')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[variables('DiskType')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('IISVMNicName'))]"
            }
          ]
        },
        "priority": "Spot",
        "evictionPolicy": "Deallocate"
      },
      "resources": [
        {
          "name": "InstallWebApp",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2019-03-01",
          "dependsOn": [
            "[parameters('IISVMName')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "commandToExecute": "[concat(variables('WebScriptDownload'),'; powershell -ExecutionPolicy Unrestricted -File ', variables('WebScriptFileName'), ' ', variables('WebScriptParameters'))]"
            }
          }
        },
        {
          "name": "JoinDomain",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[parameters('IISVMName')]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('IISVMName'), 'InstallWebApp')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "JsonADDomainExtension",
            "typeHandlerVersion": "1.3",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "Name": "[parameters('domainToJoin')]",
              "OUPath": "[variables('domainOUPath')]",
              "User": "[concat(parameters('domainToJoin'), '\\', parameters('adminUsername'))]",
              "Restart": "true",
              "Options": "[variables('domainJoinOptions')]"
            },
            "protectedSettings": {
              "Password": "[parameters('adminPassword')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {
  }
}
