{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "skuSizeVM": {
            "defaultValue": "E2bds_v5",
            "type": "string",
            "metadata": { "description": "Size of Virtual Machines to use" },
            "allowedValues": [ "D2s_v3","D2s_v5","E2ads_v5","E2as_v5","E2bds_v5","E2bs_v5" ]
         },
         "zone": {
            "defaultValue": "1",
            "type": "string",
            "allowedValues": [ "1","2","3" ]
         },
        "adminUsername": {
            "type": "string",
            "defaultValue": "adadmin",
            "metadata": {
                "description": "The name of the administrator account of the new VM and domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Demo!pass123",
            "metadata": {
                "description": "The password for the administrator account of the new VM and domain"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "contoso.ins",
            "metadata": {
                "description": "The FQDN of the Active Directory Domain to be created"
            }
        },
        "baseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/yungchou/mcwci/"
        },
        "resourceFolder": {
            "type": "string",
            "defaultValue": "main/Hands-on%20lab/Resources/"
        },
        "seed": { 
            "defaultValue": "[utcNow('yyyyMMddHHmmss')]", 
            "type": "string" 
        }
    },
    "variables": {
        "min": 211,
		"max": 228,
		"stub": "[ add(variables('min'), mod(int(substring(parameters('seed'), 12, 2)), add(sub(variables('max'), variables('min')), 1)))]",
        "vnetName": "[concat('vnet-',variables('stub'))]",
        "ADVMPrivateIPAddress": "[concat('10.',variables('stub'),'.3.100')]",
        "DCVMName": "[concat('ci',variables('stub'),'-DC',parameters('zone'))]",
        "IISVMName": "[concat('ci',variables('stub'),'-IIS',parameters('zone'))]",
        "SQLVMName": "[concat('ci',variables('stub'),'-SQL',parameters('zone'))]"
    },
    "resources": [
        {
            "name": "VirtualNetwork",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'), parameters('resourceFolder'), 'templates/vnet.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "seed": { "value": "[variables('stub')]" },
                    "VNetName": { "value": "[variables('vnetName')]" }
                }
            }
        },
        {
            "name": "ADVM1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/VirtualNetwork"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'templates/deploy-advm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "skuSizeVM": { "value": "[parameters('skuSizeVM')]" },
                    "baseUri": { "value": "[parameters('baseUri')]" },
                    "resourceFolder": { "value": "[parameters('resourceFolder')]" },
                    "ADVMName": { "value": "[variables('DCVMName')]" },
                    "AvailabilityZone": { "value": "[parameters('zone')]" },
                    "ADSubnetId": { "value": "[reference('VirtualNetwork').outputs.ADSubnetId.value]" },
                    "ADVMPrivateIPAddress": { "value": "[variables('ADVMPrivateIPAddress')]" },
                    "adminUserName": { "value": "[parameters('adminUserName')]" },
                    "adminPassword": { "value": "[parameters('adminPassword')]" },
                    "domainName": { "value": "[parameters('domainName')]" }
                }
            }
        },
        {
            "name": "VirtualNetworkWithDNS",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/ADVM1"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'templates/vnet.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "VNetName": {
                        "value": "[variables('vnetName')]"
                    },
                    "DNSIPs": {
                        "value": [
                            "[reference('ADVM1').outputs.ADVM1PrivateIP.value]"
                        ]
                    }
                }
            }
        },
        {
            "name": "WebVM1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/VirtualNetworkWithDNS"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'templates/deploy-webvm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "skuSizeVM": {
                        "value": "[parameters('skuSizeVM')]"
                    },
                    "baseUri": {
                        "value": "[parameters('baseUri')]"
                    },
                    "resourceFolder": {
                        "value": "[parameters('resourceFolder')]"
                    },
                    "WebVMName": {
                        "value": "[variables('IISVMName')]"
                    },
                    "AvailabilityZone": {
                        "value": "[parameters('zone')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "AppsSubnetId": {
                        "value": "[reference('VirtualNetwork').outputs.AppsSubnetId.value]"
                    },
                    "PublicIP": {
                        "value": true
                    },
                    "SQLEndpoint": {
                        "value": "[variables('SQLVMName')]"
                    },
                    "domainToJoin": {
                        "value": "[parameters('domainName')]"
                    }
                }
            }
        },
        {
            "name": "SQLVM1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-09-01",
            "dependsOn": [
                "Microsoft.Resources/deployments/VirtualNetworkWithDNS"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'templates/deploy-sqlvm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "skuSizeVM": {
                        "value": "[parameters('skuSizeVM')]"
                    },
                    "baseUri": {
                        "value": "[parameters('baseUri')]"
                    },
                    "resourceFolder": {
                        "value": "[parameters('resourceFolder')]"
                    },
                    "SqlVMName": {
                        "value": "[variables('SQLVMName')]"
                    },
                    "AvailabilityZone": {
                        "value": "[parameters('zone')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "DataSubnetId": {
                        "value": "[reference('VirtualNetwork').outputs.DataSubnetId.value]"
                    },
                    "domainToJoin": {
                        "value": "[parameters('domainName')]"
                    },
                    "SQLDownloadUrl": {
                        "value": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'application/ContosoInsurance.bak')]"
                    }
                }
            }
        },
        {
            "name": "Bastion",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "Microsoft.Resources/deployments/VirtualNetworkWithDNS"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUri'),parameters('resourceFolder'), 'templates/bastion.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "BastionSubnetId": {
                        "value": "[reference('VirtualNetwork').outputs.BastionSubnetId.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "primaryVnetRef": {
            "type": "string",
            "value": "[variables('stub')]"
          }      
    }
}
